<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0.0dip" />
            <gradient android:startColor="@color/my_primary" android:endColor="@color/my_primary" android:angle="270.0" android:centerY="0.5" android:centerColor="@color/my_icons" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0.0dip" />
                <gradient android:startColor="@color/my_primary" android:endColor="@color/my_primary" android:angle="270.0" android:centerY="0.5" android:centerColor="@color/my_primary_light" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0.0dip" />
                <gradient android:startColor="@color/my_primary_dark" android:endColor="@color/my_primary_dark" android:angle="270.0" android:centerY="0.5" android:centerColor="@color/my_primary" />
            </shape>
        </clip>
    </item>
</layer-list>